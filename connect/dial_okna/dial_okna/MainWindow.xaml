<Window x:Class="dial_okna.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Приложение" Height="400" Width="400">
    <TabControl>
        <TabItem Header="Задание 1">
            <StackPanel Margin="10">
                <Label Content="Ваше имя:"/>
                <TextBox x:Name="nameTextBox" Width="200" ToolTip="Напишите ваше имя"/>
                <Button Content="Ввод" Click="Предоставление" Width="100" RenderTransformOrigin="0.54,1.611"/>
            </StackPanel>
        </TabItem>
        <TabItem Header="Задание 2">
            <StackPanel Margin="10">
                <TextBox x:Name="textBox" Height="150" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                <Button Content="Сохранить" Click="Клик" Width="100"/>
                <Slider x:Name="fontSizeSlider" Minimum="8" Maximum="40" Value="12" TickFrequency="1" 
                        ValueChanged="ИзменяемоеЗначение"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>